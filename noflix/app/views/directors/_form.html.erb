  <% if director.errors.any? %>
    <div id="error_explanation" class="ui negative message">
      <i class="close icon"></i>
      <div class="header"><%= pluralize(director.errors.count, "error") %> prohibited this director from being saved:</div>

      <ul class="list">
      <% director.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
