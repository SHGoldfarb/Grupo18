<h1>Director</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @director.name %>
</p>

<div class="ui list" style="width: 120px;">
    <div class="item">
        <%= link_to(edit_director_path(@director), :class => "ui left floated small teal labeled icon button fluid") do %>
            <i class="edit icon"></i> Edit
        <% end %>
    </div>
    <div class="item">
        <%= link_to(directors_path, :class => "ui left floated basic small teal labeled icon button fluid") do %>
            <i class="angle left icon"></i> Back
        <% end %>
    </div>
</div>
