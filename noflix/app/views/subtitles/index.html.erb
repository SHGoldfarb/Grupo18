<h1>Subtitles</h1>

<p id="notice"><%= notice %></p>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subtitles.each do |subtitle| %>
      <tr>
        <td><%= subtitle.language %></td>
        <td>
            <%= link_to(subtitle_path(subtitle), :class => "ui left floated small teal labeled icon button") do %>
                <i class="television icon"></i> Show
            <% end %>
        </td>
        <td>
            <%= link_to(edit_subtitle_path(subtitle), :class => "ui left floated small primary labeled icon button") do %>
                <i class="edit icon"></i> Edit
            <% end %>
        </td>
        <td>
            <%= link_to('Destroy', subtitle, method: :delete, data: {confirm: 'Are you sure?'}) %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot class="full-width">
      <tr>
        <th colspan="4">
            <%= link_to(new_subtitle_path, :class => "ui left floated small teal labeled icon button") do %>
                <i class="user icon"></i> New Subtitle
            <% end %>
        </th>
      </tr>
    </tfoot>
</table>
