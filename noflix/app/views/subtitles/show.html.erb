<h1>Subtitle</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Language:</strong>
  <%= @subtitle.language %>
</p>

<div class="ui list" style="width: 120px;">
    <div class="item">
        <%= link_to(edit_subtitle_path(@subtitle), :class => "ui left floated small teal labeled icon button fluid") do %>
            <i class="edit icon"></i> Edit
        <% end %>
    </div>
    <div class="item">
        <%= link_to(subtitles_path, :class => "ui left floated basic small teal labeled icon button fluid") do %>
            <i class="angle left icon"></i> Back
        <% end %>
    </div>
</div>
