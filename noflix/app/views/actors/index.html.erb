<h1>Actors</h1>

<p id="notice"><%= notice %></p>

<table class="ui celled table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td>
            <%= link_to(actor_path(actor), :class => "ui left floated small teal labeled icon button") do %>
                <i class="television icon"></i> Show
            <% end %>
        </td>
        <td>
            <%= link_to(edit_actor_path(actor), :class => "ui left floated small primary labeled icon button") do %>
                <i class="edit icon"></i> Edit
            <% end %>
        </td>
        <td>
            <%= link_to('Destroy', actor, method: :delete, data: {confirm: 'Are you sure?'}) %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot class="full-width">
  <tr>
    <th colspan="4">
        <%= link_to(new_actor_path, :class => "ui left floated small teal labeled icon button") do %>
            <i class="user icon"></i> New Actor
        <% end %>
    </th>
  </tr>
</tfoot>
</table>

<br>
