<p id="notice"><%= notice %></p>

<h1>Actors</h1>

<table class="ui celled table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td class="selectable"><%= link_to 'Show', actor %></td>
        <td class="selectable"><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td class="selectable"><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot class="full-width">
  <tr>
    <th colspan="4">
      <div class="ui left floated small teal labeled icon button">
        <i class="user icon"></i> New Actor
      </div>
    </th>
  </tr>
</tfoot>
</table>

<br>

<%= link_to 'New Actor', new_actor_path %>
