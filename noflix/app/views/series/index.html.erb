<p id="notice"><%= notice %></p>

<h1>Series</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Language</th>
      <th>Country</th>
      <th>Category</th>
      <th>Start year</th>
      <th>End year</th>
      <th>Plot</th>
      <th>Is private</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @series.each do |series| %>
      <tr>
        <td><%= series.title %></td>
        <td><%= series.language %></td>
        <td><%= series.country %></td>
        <td><%= series.category %></td>
        <td><%= series.start_year %></td>
        <td><%= series.end_year %></td>
        <td><%= series.plot %></td>
        <td><%= series.is_private %></td>
        <td><%= link_to 'Show', series %></td>
        <td><%= link_to 'Edit', edit_series_path(series) %></td>
        <td><%= link_to 'Destroy', series, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

