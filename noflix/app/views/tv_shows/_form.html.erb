<%= form_for(tv_show, :html => {:class => 'ui inverted form'}) do |f| %>
  <% if tv_show.errors.any? %>
  <div id="error_explanation" class="ui negative message">
      <i class="close icon"></i>
      <div class="header"><%= pluralize(tv_show.errors.count, "error") %> prohibited this tv_show from being saved:</div>

      <ul class="list">
      <% tv_show.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :language %>
    <%= f.text_field :language %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>

  <div class="field">
    <%= f.label :start_year %>
    <%= f.number_field :start_year %>
  </div>

  <div class="field">
    <%= f.label :end_year %>
    <%= f.number_field :end_year %>
  </div>

  <div class="field">
    <%= f.label :plot %>
    <%= f.text_area :plot %>
  </div>

  <div class="field">
    <%= f.label :director_id %>
    <%= f.text_field :director_id %>
  </div>

  <div class="field">
    <!-- <%= f.label :owner_id %> -->
    <%= f.hidden_field :user_id, :value => tv_show.user_id %>
  </div>

  <div class="field">
      <%= f.submit :class => 'ui teal button' %>
  </div>
<% end %>
