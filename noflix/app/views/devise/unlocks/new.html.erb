<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, :class => 'ui inverted form' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.submit "Resend unlock instructions", :class => 'ui teal button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
